{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../../src/$1",
    "^@common/(.*)$": "<rootDir>/../../src/common/$1",
    "^@modules/(.*)$": "<rootDir>/../../src/modules/$1",
    "^@config/(.*)$": "<rootDir>/../../src/config/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "testTimeout": 30000,
  "verbose": true,
  "collectCoverageFrom": [
    "../../src/**/*.ts",
    "!../../src/**/*.module.ts",
    "!../../src/**/*.dto.ts",
    "!../../src/main.ts"
  ]
}
